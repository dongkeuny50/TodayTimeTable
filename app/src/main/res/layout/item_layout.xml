<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/LinearLayout"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@drawable/second_selector"
    android:weightSum="15">

    <TextView
        android:id="@+id/ampm"
        android:layout_width="33dp"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:background="@android:drawable/radiobutton_off_background"
       android:backgroundTint="@color/circlecolor"

        android:gravity="center_vertical"
        android:textColor="@android:color/transparent"
        android:textSize="9sp" />

    <EditText
        android:id="@+id/time"
        android:layout_width="25dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="10dp"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:ems="10"
        android:fontFamily="@font/bingraet"
        android:gravity="center_vertical|right"

        android:hint="시"
        android:imeOptions="actionNext"
        android:inputType="number"
        android:maxLength="2" />

    <TextView
        android:id="@+id/column"
        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@android:color/transparent"


        android:gravity="center"
        android:text=":" />

    <EditText
        android:id="@+id/minute"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_weight="2"
        android:background="@android:color/transparent"
        android:ems="10"
        android:fontFamily="@font/bingraet"
        android:gravity="center_vertical|left"
        android:hint="분"
        android:imeOptions="actionNext"
        android:inputType="number"
        android:maxLength="2" />

    <EditText
        android:id="@+id/textlines"
        android:layout_width="214dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="8"
        android:background="@drawable/third_selector"

        android:ems="10"
        android:fontFamily="@font/jalnan"
        android:hint="내용"
        android:imeOptions="actionNext"
        android:inputType="textMultiLine"
        android:maxLength="16"
        android:maxLines="2"
        android:scrollHorizontally="true"
        android:textAlignment="center"
        android:textColor="@color/topcolor2"
        android:textSize="16sp" />

    <Switch
        android:id="@+id/selectalarm"
        android:layout_width="49dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical|left" />

</LinearLayout>
